<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox fx:id="root"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.yebur.controller.ReceiptController"
      spacing="4"
      prefWidth="220"
      minWidth="220"
      maxWidth="220"
      style="-fx-padding: 8; -fx-background-color: white; -fx-font-family: 'Monospaced'; -fx-font-size: 9;">

    <!-- Шапка бара -->
    <Label fx:id="lblShopName"
           maxWidth="1.7976931348623157E308"
           style="-fx-font-weight: bold; -fx-alignment: center; -fx-text-alignment: center;"/>
    <Label fx:id="lblAddress"
           maxWidth="1.7976931348623157E308"
           style="-fx-alignment: center; -fx-text-alignment: center;"/>
    <Label fx:id="lblPhone"
           maxWidth="1.7976931348623157E308"
           style="-fx-alignment: center; -fx-text-alignment: center;"/>
    <Separator/>

    <!-- Инфо по заказу -->
    <VBox spacing="2">
        <Label fx:id="lblOrderInfo"/>
        <Label fx:id="lblDate"/>
        <Label fx:id="lblTable"/>
        <Label fx:id="lblPayment"/>
    </VBox>

    <Separator/>

    <!-- Заголовок таблицы (фиксированные колонки, как в контроллере) -->
    <GridPane hgap="4">
        <columnConstraints>
            <!-- Producto: 130 px -->
            <ColumnConstraints prefWidth="130" minWidth="130" maxWidth="130"/>
            <!-- Uds: 30 px -->
            <ColumnConstraints prefWidth="30" minWidth="30" maxWidth="30"/>
            <!-- Total: 60 px -->
            <ColumnConstraints prefWidth="60" minWidth="60" maxWidth="60"/>
        </columnConstraints>

        <Label text="Producto" GridPane.columnIndex="0"/>
        <Label text="Uds"      GridPane.columnIndex="1" style="-fx-alignment: center;"/>
        <Label text="Total"    GridPane.columnIndex="2" style="-fx-alignment: center;"/>
    </GridPane>

    <Separator/>

    <!-- Позиции -->
    <VBox fx:id="itemsBox"
          spacing="2"
          prefWidth="220"
          minWidth="220"
          maxWidth="220"/>

    <Separator/>

    <!-- Итог -->
    <Label fx:id="lblTotal"
           maxWidth="1.7976931348623157E308"
           style="-fx-font-weight: bold; -fx-alignment: center;"/>
    <Label fx:id="lblFooter"
           maxWidth="1.7976931348623157E308"
           style="-fx-alignment: center;"/>

</VBox>
