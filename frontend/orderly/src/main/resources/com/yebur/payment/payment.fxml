<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.yebur.controller.PartialPaymentController"
    prefWidth="1024" prefHeight="768"
    style="-fx-padding: 20;">

    <!-- ===== Верхняя панель ===== -->
    <top>
        <HBox spacing="10" alignment="CENTER" styleClass="header-box">
            <BorderPane.margin>
                <Insets top="0" right="0" bottom="10" left="0" />
            </BorderPane.margin>
            <Label fx:id="tableNameLabel" styleClass="header-title" />
        </HBox>
    </top>

    <!-- ===== Центральная часть ===== -->
    <center>
        <!-- ВАЖНО: есть строка с vgrow=ALWAYS, чтобы центр занял всю высоту -->
        <GridPane hgap="10" vgap="0">
            <columnConstraints>
                <ColumnConstraints percentWidth="37.5" />
                <ColumnConstraints percentWidth="37.5" />
                <ColumnConstraints percentWidth="25" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" /> <!-- единственная строка растягивается по высоте -->
            </rowConstraints>

            <!-- ==== Левая колонка ==== -->
            <VBox spacing="10" styleClass="card"
                GridPane.columnIndex="0" GridPane.rowIndex="0"
                GridPane.vgrow="ALWAYS">
                <HBox alignment="CENTER">
                    <Label text="Cuenta" styleClass="order-title" />
                </HBox>
                <GridPane hgap="10" alignment="CENTER_LEFT"
                          styleClass="order-header"
                          VBox.vgrow="NEVER">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="10" halignment="CENTER" />
                        <ColumnConstraints percentWidth="50" hgrow="ALWAYS" />
                        <ColumnConstraints percentWidth="20" halignment="CENTER" />
                        <ColumnConstraints percentWidth="20" halignment="CENTER" />
                    </columnConstraints>

                    <children>
                        <Label text="Uds" GridPane.columnIndex="0" styleClass="order-header-quantity" />
                        <Label text="Producto" GridPane.columnIndex="1"/>
                        <Label text="Precio" GridPane.columnIndex="2" styleClass="order-header-price" />
                        <Label text="Total" GridPane.columnIndex="3" styleClass="order-header-price" />
                    </children>
                </GridPane>

                <!-- Растяжение вниз: fitToHeight + VBox.vgrow -->
                <ScrollPane fx:id="mainOrderSP"
                    styleClass="order-scroll-pane"
                    fitToWidth="true"
                    fitToHeight="true"
                    VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="mainOrderBox"
                            styleClass="order-items-box"
                            spacing="5"
                            VBox.vgrow="ALWAYS" />
                    </content>
                </ScrollPane>

                <HBox alignment="CENTER_RIGHT" styleClass="order-total-bar">
                    <HBox alignment="CENTER_RIGHT" styleClass="order-total-bg">
                        <Label text="Total:" styleClass="order-total-label" />
                        <Label fx:id="mainTotalLabel" text="0.00" styleClass="order-total-value" />
                    </HBox>
                </HBox>
            </VBox>

            <!-- ==== Правая колонка ==== -->
            <VBox spacing="10" styleClass="card"
                GridPane.columnIndex="1" GridPane.rowIndex="0"
                GridPane.vgrow="ALWAYS">
                <HBox alignment="CENTER">
                    <Label text="Subcuenta" styleClass="order-title" />
                </HBox>

                <GridPane hgap="10" alignment="CENTER_LEFT"
                          styleClass="order-header"
                          VBox.vgrow="NEVER">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="10" halignment="CENTER" />
                        <ColumnConstraints percentWidth="50" hgrow="ALWAYS" />
                        <ColumnConstraints percentWidth="20" halignment="CENTER" />
                        <ColumnConstraints percentWidth="20" halignment="CENTER" />
                    </columnConstraints>

                    <children>
                        <Label text="Uds" GridPane.columnIndex="0" styleClass="order-header-quantity" />
                        <Label text="Producto" GridPane.columnIndex="1"/>
                        <Label text="Precio" GridPane.columnIndex="2" styleClass="order-header-price" />
                        <Label text="Total" GridPane.columnIndex="3" styleClass="order-header-price" />
                    </children>
                </GridPane>

                <!-- Растяжение вниз: fitToHeight + VBox.vgrow -->
                <ScrollPane fx:id="partialOrderSP"
                    styleClass="order-scroll-pane"
                    fitToWidth="true"
                    fitToHeight="true"
                    VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="partialOrderBox"
                            styleClass="order-items-box"
                            spacing="5"
                            VBox.vgrow="ALWAYS" />
                    </content>
                </ScrollPane>

                <HBox alignment="CENTER_RIGHT" styleClass="order-total-bar">
                    <HBox alignment="CENTER_RIGHT" styleClass="order-total-bg">
                        <Label text="Parcial:" styleClass="order-total-label" />
                        <Label fx:id="partialTotalLabel" text="0.00" styleClass="order-total-value" />
                    </HBox>
                </HBox>
            </VBox>

            <StackPane GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
                <VBox spacing="10" alignment="CENTER" StackPane.alignment="CENTER">

                    <VBox spacing="15"
                        alignment="CENTER"
                        maxWidth="360"
                        prefWidth="320"
                        maxHeight="140"
                        prefHeight="130">
                        <styleClass>
                            <String fx:value="card" />
                            <String fx:value="payment-method-card" />
                        </styleClass>

                        <Label text="Forma de pago:" styleClass="header-title" />

                        <HBox spacing="20" alignment="CENTER">
                            <Button fx:id="cardButton" text="Tarjeta"
                                prefWidth="140" prefHeight="60" maxWidth="Infinity"
                                maxHeight="Infinity">
                                <styleClass>
                                    <String fx:value="payment-btn" />
                                </styleClass>
                            </Button>

                            <Button fx:id="cashButton" text="Efectivo"
                                prefWidth="140" prefHeight="60" maxWidth="Infinity"
                                maxHeight="Infinity">
                                <styleClass>
                                    <String fx:value="payment-btn" />
                                </styleClass>
                            </Button>
                        </HBox>

                    </VBox>

                    <VBox spacing="10"
                        alignment="CENTER"
                        maxWidth="360"
                        prefWidth="320"
                        maxHeight="350"
                        prefHeight="340"
                        VBox.vgrow="ALWAYS">
                        <styleClass>
                            <String fx:value="card" />
                            <String fx:value="calculator-card" />
                        </styleClass>

                        <TextField fx:id="displayField"
                            styleClass="display"
                            editable="false"
                            prefWidth="200"
                            maxWidth="Infinity"
                            VBox.vgrow="NEVER" />

                        <GridPane fx:id="calculatorGP"
                            hgap="10"
                            vgap="10"
                            alignment="CENTER"
                            maxHeight="Infinity"
                            VBox.vgrow="ALWAYS">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="33.3" />
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="33.3" />
                                <ColumnConstraints hgrow="ALWAYS" percentWidth="33.3" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints percentHeight="25" />
                                <RowConstraints percentHeight="25" />
                                <RowConstraints percentHeight="25" />
                                <RowConstraints percentHeight="25" />
                            </rowConstraints>

                            <children>
                                <Button text="7" styleClass="num-btn"
                                    GridPane.columnIndex="0" GridPane.rowIndex="0"
                                    maxWidth="Infinity" maxHeight="Infinity" />
                                <Button text="8" styleClass="num-btn"
                                    GridPane.columnIndex="1" GridPane.rowIndex="0"
                                    maxWidth="Infinity" maxHeight="Infinity" />
                                <Button text="9" styleClass="num-btn"
                                    GridPane.columnIndex="2" GridPane.rowIndex="0"
                                    maxWidth="Infinity" maxHeight="Infinity" />

                                <Button text="4" styleClass="num-btn"
                                    GridPane.columnIndex="0" GridPane.rowIndex="1"
                                    maxWidth="Infinity" maxHeight="Infinity" />
                                <Button text="5" styleClass="num-btn"
                                    GridPane.columnIndex="1" GridPane.rowIndex="1"
                                    maxWidth="Infinity" maxHeight="Infinity" />
                                <Button text="6" styleClass="num-btn"
                                    GridPane.columnIndex="2" GridPane.rowIndex="1"
                                    maxWidth="Infinity" maxHeight="Infinity" />

                                <Button text="1" styleClass="num-btn"
                                    GridPane.columnIndex="0" GridPane.rowIndex="2"
                                    maxWidth="Infinity" maxHeight="Infinity" />
                                <Button text="2" styleClass="num-btn"
                                    GridPane.columnIndex="1" GridPane.rowIndex="2"
                                    maxWidth="Infinity" maxHeight="Infinity" />
                                <Button text="3" styleClass="num-btn"
                                    GridPane.columnIndex="2" GridPane.rowIndex="2"
                                    maxWidth="Infinity" maxHeight="Infinity" />

                                <Button text="0" styleClass="num-btn"
                                    GridPane.columnIndex="1" GridPane.rowIndex="3"
                                    maxWidth="Infinity" maxHeight="Infinity" />
                                <Button text="." styleClass="num-btn"
                                    GridPane.columnIndex="0" GridPane.rowIndex="3"
                                    maxWidth="Infinity" maxHeight="Infinity" />
                                <Button text="C"
                                    GridPane.columnIndex="2" GridPane.rowIndex="3"
                                    maxWidth="Infinity" maxHeight="Infinity">
                                    <styleClass>
                                        <String fx:value="action-btn" />
                                        <String fx:value="red" />
                                    </styleClass>
                                </Button>
                            </children>
                        </GridPane>
                    </VBox>


                </VBox>
            </StackPane>


        </GridPane>
    </center>

    <!-- ===== Нижние кнопки ===== -->
    <bottom>
        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
            <Button text="Sin copia" onAction="#handlePayNoReceipt">
                <styleClass>
                    <String fx:value="action-btn" />
                    <String fx:value="green" />
                </styleClass>
            </Button>

            <Button text="Con copia">
                <styleClass>
                    <String fx:value="action-btn" />
                    <String fx:value="blue" />
                </styleClass>
            </Button>

            <Button text="Por correo">
                <styleClass>
                    <String fx:value="action-btn" />
                    <String fx:value="dark" />
                </styleClass>
            </Button>

            <Button text="Cancelar" onAction="#handleCloseClick">
                <styleClass>
                    <String fx:value="action-btn" />
                    <String fx:value="red" />
                </styleClass>
            </Button>
        </HBox>
    </bottom>

</BorderPane>