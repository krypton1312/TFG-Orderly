        <StackPane GridPane.rowIndex="0">
            <VBox fx:id="closeShiftVBox" styleClass="card" alignment="CENTER" spacing="10" pickOnBounds="false" >
                <StackPane alignment="CENTER" scaleX="1.4" scaleY="1.4" pickOnBounds="false">
