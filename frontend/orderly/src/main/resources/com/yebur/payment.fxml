<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yebur.controller.PartialPaymentController"
            prefWidth="1000" prefHeight="600"
            style="-fx-padding: 20;">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Dividir cuenta" style="-fx-font-size: 20; -fx-font-weight: bold;" />
            <Label fx:id="tableNameLabel" text="Mesa 3" style="-fx-font-size: 16; -fx-text-fill: #6b7280;" />
        </HBox>
    </top>

    <center>
        <HBox spacing="20">
            <!-- Левая таблица (основной заказ) -->
            <VBox spacing="10" styleClass="card" HBox.hgrow="ALWAYS">
                <Label text="Pedido completo" styleClass="order-title" />
                <TableView fx:id="mainOrderTable" prefHeight="350">
                    <columns>
                        <TableColumn text="Uds" prefWidth="60" />
                        <TableColumn text="Producto" prefWidth="180" />
                        <TableColumn text="Precio" prefWidth="80" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER_RIGHT" styleClass="order-total-bg">
                    <Label text="Total:" styleClass="order-total-label" />
                    <Label fx:id="mainTotalLabel" text="$0.00" styleClass="order-total-value" />
                </HBox>
            </VBox>

            <!-- Правая таблица (частичная оплата) -->
            <VBox spacing="10" styleClass="card" HBox.hgrow="ALWAYS">
                <Label text="Subcuenta parcial" styleClass="order-title" />
                <TableView fx:id="partialOrderTable" prefHeight="350">
                    <columns>
                        <TableColumn text="Uds" prefWidth="60" />
                        <TableColumn text="Producto" prefWidth="180" />
                        <TableColumn text="Precio" prefWidth="80" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER_RIGHT" styleClass="order-total-bg">
                    <Label text="Parcial:" styleClass="order-total-label" />
                    <Label fx:id="partialTotalLabel" text="$0.00" styleClass="order-total-value" />
                </HBox>
            </VBox>

            <!-- Калькулятор -->
            <VBox spacing="10" styleClass="card" prefWidth="220">
                <Label text="Calculadora" styleClass="order-title" />
                <TextField fx:id="displayField" styleClass="display" text="0" editable="false" />
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="ALWAYS" />
                        <RowConstraints vgrow="ALWAYS" />
                        <RowConstraints vgrow="ALWAYS" />
                        <RowConstraints vgrow="ALWAYS" />
                        <RowConstraints vgrow="ALWAYS" />
                    </rowConstraints>

                    <children>
                        <Button text="C" styleClass="num-btn" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Button text="±" styleClass="num-btn" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Button text="%" styleClass="num-btn" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                        <Button text="7" styleClass="num-btn" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Button text="8" styleClass="num-btn" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Button text="9" styleClass="num-btn" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                        <Button text="4" styleClass="num-btn" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Button text="5" styleClass="num-btn" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Button text="6" styleClass="num-btn" GridPane.columnIndex="2" GridPane.rowIndex="2" />

                        <Button text="1" styleClass="num-btn" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Button text="2" styleClass="num-btn" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Button text="3" styleClass="num-btn" GridPane.columnIndex="2" GridPane.rowIndex="3" />

                        <Button text="0" styleClass="num-btn" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <Button text="." styleClass="num-btn" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Button text="=" styleClass="num-btn" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                    </children>
                </GridPane>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
            <Button text="Sin copia" styleClass="action-btn green" />
            <Button text="Con copia" styleClass="action-btn blue" />
            <Button text="Por correo" styleClass="action-btn dark" />
            <Button text="Cancelar" styleClass="action-btn red" />
        </HBox>
    </bottom>

</BorderPane>
